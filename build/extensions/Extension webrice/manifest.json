{

  "manifest_version": 2,
  "name": "Webrice",
  "description": "WebRICE",
  "version": "1.0",
  "default_locale": "en",
  "browser_specific_settings": {
    "gecko": {
      "strict_min_version": "56.0a1"
    }
  },

  "background": {
    "scripts": ["background.js"]
  },

  "permissions": [
    "menus",
    "activeTab"
  ],

  "icons": {
    "16": "icons/page-16.png",
    "32": "icons/page-32.png",
    "48": "icons/page-48.png"
  },

  "sidebar_action": {
    "default_icon": "icons/page-32.png",
    "default_title" : "WebRICE",
    "default_panel": "sidebarWR/sidebar.html"
  }

}
